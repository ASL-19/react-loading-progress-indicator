{
  "include": [
    "*.js",
    "*.mjs",
    "*.ts",
    ".eslintrc.js",
    "src/**/*.ts*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "incremental": true,
    "module": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "target": "es2021"
  }
}
