{
  "name": "@asl-19/react-loading-progress-indicator",
  "version": "0.2.0",
  "description": "React loading progress indicator component",
  "author": {
    "name": "Grant Heaslip",
    "email": "grant@asl19.org",
    "url": "https://asl19.org/"
  },
  "license": "GPL-3.0-or-later",
  "repository": "ASL-19/react-loading-progress-indicator",
  "files": [
    "dist/**/*.js*",
    "types/**/*.d.ts"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/react-loading-progress-indicator.d.ts",
  "sideEffects": false,
  "scripts": {
    "api-extractor:check": "api-extractor run --verbose",
    "api-extractor:update": "api-extractor run --local --verbose",
    "api-documenter:update": "api-documenter markdown --input-folder ./api-extractor --output-folder ./docs",
    "build": "npm-run-all -l -s clean-dist -p build-cjs build-esm",
    "build-and-update-api": "npm-run-all -l -s build api-extractor:update api-documenter:update",
    "build-cjs": "tsc --project tsconfig-cjs.json",
    "build-esm": "tsc --project tsconfig-esm.json",
    "build-check-and-lint": "npm-run-all -l -s build -p api-extractor:check eslint",
    "prepublishOnly": "npm run build",
    "clean-dist": "rm -rf dist/*",
    "eslint": "eslint . --ext js,ts"
  },
  "dependencies": {
    "@asl-19/js-dom-utils": "^0.1.3"
  },
  "devDependencies": {
    "@asl-19/eslint-config": "^0.4.0",
    "@asl-19/shared-package-configs": "^0.1.1",
    "@microsoft/api-documenter": "^7.13.39",
    "@microsoft/api-extractor": "^7.18.5",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "eslint": "^7.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": "^16.11.0 || ^17.0.0",
    "react-dom": "^16.11.0 || ^17.0.0"
  }
}
